  <refnamediv>
    <refname>%diff</refname>
    
    <refpurpose>Non-evaluated form of diff</refpurpose>
  </refnamediv>

  <refsynopsisdiv>
    <title>Calling Sequence</title>
    
    <synopsis>y=%diff(expr1 [,expr2 [,...]])</synopsis>
  </refsynopsisdiv>
  
  <refsection>
    <title>Description</title>
    
    <para>This function is useful to make differential equations.</para>
      
  </refsection>

  <refsection>
    <title>Examples</title>
    
    <programlisting role="example">
Syms('x')
%diff(sin(x),x)
eq=%diff('f(x)',x)=='f(x)'
atvalue('f(x)',x==0,1)
desolve(eq,'f(x)')
    </programlisting>
  </refsection>
  
